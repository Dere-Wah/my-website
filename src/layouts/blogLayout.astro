---
import HomeButton from "@components/HomeButton.astro";
import Divider from "@components/Divider.astro";
import Links from "@components/Links.astro";
import Header1 from "@components/Header1.astro";
import Paragraph from "@components/Paragraph.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={frontmatter.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-gradient-to-b from-ebony-clay-950 to-ebony-clay-950 min-h-screen font-['Inter']"
  >
    <div class="max-w-3xl mx-auto px-4 py-16">
      <article class="prose prose-invert max-w-none">
        <HomeButton />
        <header class="mb-8">
          <h1 class="text-4xl font-bold text-white mb-4">
            {frontmatter.title}
          </h1>
          <p class="text-ebony-clay-200 text-lg mb-4">
            {frontmatter.description}
          </p>
          <div class="flex items-center gap-4">
            <time class="text-ebony-clay-400 text-sm">{frontmatter.date}</time>
            <div class="flex gap-2">
              {
                frontmatter.tags.map((tag: string) => (
                  <span class="px-2 py-1 bg-ebony-clay-900/50 text-ebony-clay-200 text-sm rounded-md border border-ebony-clay-800">
                    {tag}
                  </span>
                ))
              }
            </div>
          </div>
        </header>

        <div class="space-y-6">
          <slot />
        </div>

        <footer class="mt-12 pt-8 border-t border-ebony-clay-800">
          <Links />
        </footer>
      </article>
    </div>
  </body>
</html>
