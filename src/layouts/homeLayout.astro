---
const { title, description, frontmatter } = Astro.props;
import Greeting from "@components/Greeting.jsx";
import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="DereWah.dev" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>derewah.dev</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-gradient-to-b from-ebony-clay-950 to-ebony-clay-950 min-h-screen font-['Inter']"
  >
    <div class="max-w-3xl mx-auto px-4 py-16">
      <main class="space-y-12">
        <div class="space-y-8">
          <Greeting client:load />
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>
