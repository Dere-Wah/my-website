---
import { boolean } from "astro/zod";
import Divider from "../components/Divider.astro"
interface Props {
    title: string;
    upper?: boolean;
    lower?: boolean;
}

const { title, upper, lower} = Astro.props;
---

<body>
    <div class="flex flex-col items-center">{upper == true && <Divider></Divider>}</div>
    <div class="flex flex-col items-start w-full">
        <div class="font-bold text-2xl text-ebony-clay-300">{title}</div>
        <div class="text-ebony-clay-100 font-normal text-lg"><slot></slot></div>
    </div>
    <div class="flex flex-col items-center">{lower == true && <Divider></Divider>}</div>
    
</body>